{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255,
      "pluginOptions": {
        "content-manager": {
          "display": {
            "description": "제목은 최대 255자까지 입력 가능합니다."
          }
        }
      }
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "text",
      "required": false
    },
    "body": {
      "type": "richtext",
      "required": false
    },
    "writtenBy": {
      "type": "text"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "coverCaption": {
      "type": "text",
      "required": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "blocks": {
      "type": "dynamiczone",
      "components": ["shared.media", "shared.quote", "shared.rich-text", "shared.slider"]
    },
    "customDate": {
      "type": "date",
      "required": false,
      "unique": false,
      "private": false
    }
  }
}
